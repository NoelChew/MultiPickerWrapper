<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_activity_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="AppCompatActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_activity_demo_multipickerwrapper_appcompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="MultiPickerWrapperAppCompatActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_fragment_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="MultiPickerWrapperFragment + PermisoActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_support_fragment_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="MultiPickerWrapperSupportFragment + AppCompatActivity"
        android:textAllCaps="false" />


</LinearLayout>